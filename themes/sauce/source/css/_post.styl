.posts {
  padding-bottom: 0;
}

.post-list {
  margin: 2em 0 0 0;

  li {
    position: relative;
    padding-left: 1.2em;
    margin-top: 1em;
  }

  li::before {
    content: "âž¤ ";
    position: absolute;
    margin-left: -1em;
    top: 0;
  }
}

.post-date, .post-short {
  opacity: 0.7;
}

.post {
  padding-bottom: 0;

  .date {
    margin: 1em 0;
    font-size: 0.8em;
  }

  h2 {
    margin-top: 2em;
    background: none;
    color: var(--text);
    padding: 0;
    display: block;
    margin-left: 0;
    margin-right: 0;
  }

  .video-container {
    position: relative;
    aspect-ratio: 16 / 9;
  }

  iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  p:has(img) {
    display: flex;
    justify-content: center;

    img {
      display: block;
    }
  }
}
